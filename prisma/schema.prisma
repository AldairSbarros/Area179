
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // Altere para "postgresql" ou "mysql" se necessÃ¡rio
  url      = env("DATABASE_URL")
}

model Usuario {
  id            Int      @id @default(autoincrement())
  nome          String
  email         String   @unique
  senha         String
  perfil        String
  congregacaoId Int?
  Congregacao   Congregacao? @relation(fields: [congregacaoId], references: [id])
  dizimos     Dizimo[]
}

model Congregacao {
  id         Int         @id @default(autoincrement())
  nome       String
  membros    Member[]
  usuarios   Usuario[]
  offerings  Offering[]
  despesas   Despesa[]
  receitas   Receita[]   // âœ… Adicionado agora
  investimentos Investimento[]  // ðŸ‘ˆ aqui estÃ¡ o novo campo

}

model Member {
  id            Int      @id @default(autoincrement())
  nome          String
  congregacaoId Int
  Congregacao   Congregacao @relation(fields: [congregacaoId], references: [id])
  offerings     Offering[]
}

model Offering {
  id             Int       @id @default(autoincrement())
  type           String
  value          Float
  date           DateTime
  service        String?
  receiptPhoto   String?
  numeroRecibo   String?   // âœ… Novo campo
  congregacaoId  Int
  memberId       Int
  Congregacao    Congregacao @relation(fields: [congregacaoId], references: [id])
  Member         Member      @relation(fields: [memberId], references: [id])
}

model Despesa {
  id              Int          @id @default(autoincrement())
  descricao       String
  valor           Float
  data            DateTime
  categoria       String?
  observacao      String?
  notaFiscalFoto  String?
  codigoManual    String?      // âœ… Adicionado aqui
  congregacaoId   Int
  Congregacao     Congregacao  @relation(fields: [congregacaoId], references: [id])
}

model Receita {
  id             Int      @id @default(autoincrement())
  descricao      String
  valor          Float
  data           DateTime
  categoria      String?
  observacao     String?
  codigoManual   String?
  congregacaoId  Int
  Congregacao    Congregacao @relation(fields: [congregacaoId], references: [id])
}

model Investimento {
  id             Int          @id @default(autoincrement())
  descricao      String
  valor          Float
  data           DateTime
  categoria      String?
  codigoManual   String?
  congregacaoId  Int
  Congregacao    Congregacao @relation(fields: [congregacaoId], references: [id])
}

model Dizimo {
  id           Int     @id @default(autoincrement())
  usuarioId    Int
  valor        Float
  data         DateTime @default(now())
  comprovante  String  // URL da imagem do comprovante
  numeroRecibo String  // NÃºmero do recibo

  usuario      Usuario @relation(fields: [usuarioId], references: [id])
}